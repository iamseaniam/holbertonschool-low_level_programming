#include <math.h>

int is_prime_number(int n)
{
	int i;

	if (n <= 1) return (0); /* zero and one are not prime */
	if (n == 2) return (1); /* two is the only even prime number*/
	if (n % i == 0) return (0); /* if n is divisible by i, it's not prime*/
	if (i * i > n) return 1; /* if i*i > n, n is prime*/
	return (is_prime_number(n, i + 1);/**/
}
